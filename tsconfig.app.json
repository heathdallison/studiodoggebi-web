{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "dom"],
    "paths": {
      "@services/*": ["src/app/services/*"],
      "@components/*": ["src/app/components/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
